<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.storeDataBase.persistence.ProductRepository">

    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT into products(name,description,price,deposit_id, category_id)
        values (#{name},#{description},#{price},#{deposit.id},#{category.id})
    </insert>

    <update id="updateById">
        UPDATE products set
        name = #{product.name},
        description = #{product.description},
        price = #{product.price},
        deposit_id = #{product.deposit.id},
        category_id = #{product.category.id}
        where id = #{id}
    </update>

    <delete id="deleteById">
        DELETE from products where id = #{id}
    </delete>

    <sql id="getter">
        SELECT
        p.id,
        p.name,
        p.description,
        p.price,
        p.deposit_id,
        p.category_id
        from products p
    </sql>

    <select id="getById" resultMap="ProductResultMap">
        <include refid="getter"/>
        where p.id = #{id};
    </select>

    <select id="getAll" resultMap="ProductResultMap">
        <include refid="getter"/>
    </select>




    <resultMap id="ProductResultMap" type="com.solvd.storeDataBase.domain.Product" autoMapping="false">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="price" property="price"/>
        <association property="deposit" select="com.solvd.storeDataBase.persistence.DepositRepository.getById" column="deposit_id"/>
        <association property="category" select="com.solvd.storeDataBase.persistence.CategoryRepository.getById" column="category_id"/>

    </resultMap>

</mapper>