<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.storeDataBase.persistence.PassportRepository">

    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT into passports(number) values (#{name})
    </insert>

    <update id="updateById">
        UPDATE passports set number = #{passport.number} where id = #{id}
    </update>

    <delete id="deleteById">
        DELETE from passports where id = #{id}
    </delete>

    <select id="getById" resultMap="PassportResultMap">
        SELECT id, number from passports where id = #{id}
    </select>

    <select id="getAll" resultMap="PassportResultMap">
        SELECT id, number from passports
    </select>


    <resultMap id="PassportResultMap" type="com.solvd.storeDataBase.domain.Passport" autoMapping="false">
        <id column="id" property="id"/>
        <result column="number" property="number"/>
    </resultMap>

</mapper>